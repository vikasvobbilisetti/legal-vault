<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_edit"
    tools:context=".profile.ProfileEdit">

    <include
        android:id="@+id/include"
        layout="@layout/profile_header" />

    <TextView
        android:id="@+id/image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/profile_picture_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/name_editemployee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Name"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_button"
        app:layout_constraintVertical_bias="0.009" />

    <EditText
        android:id="@+id/name_edit_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="452dp"
        android:background="@drawable/profile_header_button"
        android:lines="1"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_button"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_header_button"
        android:id="@+id/position_edit_employee"
        android:paddingLeft="15dp"
        android:layout_marginStart="180dp"
        android:lines="1"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_employee" />

    <TextView
        android:id="@+id/position_editemployee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Position"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_editemployee_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_edit_employee"
        android:background="@drawable/profile_header_button"
        android:paddingLeft="15dp"
        android:lines="1"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/position_edit_employee" />

    <TextView
        android:id="@+id/Email_editemployee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Email"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_editemployee_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Depart_edit_employee"
        android:background="@drawable/profile_header_button"
        android:paddingLeft="15dp"
        android:layout_marginStart="180dp"
        android:lines="1"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_employee" />
    <TextView
        android:id="@+id/Depart_editemployee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Department"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email_editemployee_label" />

    <TextView
        android:id="@+id/Member_editemployee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Member"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Depart_editemployee_label" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@drawable/profile_header_button"

        android:layout_marginStart="180dp"
        android:layout_marginEnd="40dp"
        android:spinnerMode="dropdown"
        android:paddingLeft="15dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Depart_edit_employee" />

    <TextView
        android:id="@+id/profile_employee_edit_PA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/pause_access"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:clickable="true"
        android:text="Pause access"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/changepass_remove_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Member_editemployee_label" />

    <TextView
        android:id="@+id/profile_employee_edit_CP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/changepass_remove_btn"
        android:clickable="true"
        android:drawableLeft="@drawable/change_password"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="Change Password"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_employee_edit_PA" />

    <TextView
        android:id="@+id/profile_employee_edit_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/changepass_remove_btn"
        android:clickable="true"
        android:drawableLeft="@drawable/remove"
        android:fontFamily="@font/poppins_medium"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_employee_edit_CP" />


</androidx.constraintlayout.widget.ConstraintLayout>